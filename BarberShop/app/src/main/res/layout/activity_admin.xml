<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_admin1"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Quản Lý"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/Blue"
        android:textSize="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_user" />

                    <Button
                        android:id="@+id/btnManageUsers"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Quản lý Người dùng"
                        tools:ignore="VisualLintButtonSize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_barber" />

                    <Button
                        android:id="@+id/btnManageBarbers"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Quản lý Thợ"
                        tools:ignore="VisualLintButtonSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_calendar" />

                    <Button
                        android:id="@+id/btnManageAppointments"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Quản lý Lịch hẹn"
                        tools:ignore="VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_shop" />

                    <Button
                        android:id="@+id/btnManageStores"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Quản lý Cửa hàng"
                        tools:ignore="VisualLintButtonSize" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_report" />

                    <Button
                        android:id="@+id/btnViewReports"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Xem Báo cáo"
                        tools:ignore="VisualLintButtonSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="102dp"
                        android:layout_height="108dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/icon_log_out" />

                    <Button
                        android:id="@+id/btnLogOut"
                        android:layout_width="164dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lightBlue"
                        android:text="Đăng xuất"
                        tools:ignore="VisualLintButtonSize" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
