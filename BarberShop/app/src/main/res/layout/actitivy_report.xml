<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Thống kê người dùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="Shop"
            android:textAlignment="textEnd"
            android:textSize="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="Name"
            android:textColor="@color/lightBlue"
            android:textSize="50dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Báo cáo thống kê"
        android:textSize="40dp"
        android:textColor="@color/Blue"
        android:fontFamily="cursive"
        android:layout_marginBottom="30dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_total_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng số người dùng: "
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/text_users_with_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người dùng đã đặt lịch: "
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/text_most_active_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người dùng hoạt động tích cực nhất: "
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Thống kê lịch đã đặt -->
    <TextView
        android:id="@+id/text_total_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng số lịch đã đặt: "
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Thống kê doanh thu -->
    <TextView
        android:id="@+id/text_total_revenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng doanh thu: "
        android:textSize="16sp"
        android:padding="8dp" />

</LinearLayout>