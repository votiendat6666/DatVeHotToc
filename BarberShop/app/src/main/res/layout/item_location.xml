<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên cửa hàng"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvLocationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvLocationService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dịch vụ"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvLocationPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá trung bình"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvLocationContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liên Hệ"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnEditStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:backgroundTint="@color/lightBlue"/>


        <Button
            android:id="@+id/btnDeleteStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:backgroundTint="@color/lightBlue"/>
    </LinearLayout>
</LinearLayout>
